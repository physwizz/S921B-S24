<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
    <!-- HTTP URL for network validation, to use for detecting captive portals. -->
    <string name="default_captive_portal_http_url" translatable="false">http://www.google.cn/generate_204</string>

    <!-- HTTPS URL for network validation, to use for confirming internet connectivity. -->
    <string name="default_captive_portal_https_url" translatable="false">https://www.google.cn/generate_204</string>

    <!-- List of fallback URLs to use for detecting captive portals. -->
    <string-array name="default_captive_portal_fallback_urls" translatable="false">
        <item>http://g.cn/generate_204</item>
        <item>http://www.qualcomm.cn/generate_204</item>
    </string-array>
</resources>

