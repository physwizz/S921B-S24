			mif {
				desc = "group_mif";
				pm-qos-class = < PM_QOS_BUS_THROUGHPUT >;
				miss-idx = < 2 >;

				boost-min = < 2028000 >;
				force-boost-ms = < 16 >;

				mif-table = <  421000
					       676000
					       845000
					      1014000
					      1352000
					      1539000
					      1716000
					      2028000
					      2288000
