			};
			mode4 {
				desc = "balance";

				level0 {
					base = <&set4>;
					set = <&set4>;
				};
				level1 {
					base = <&set4>;
					set = <&set4_1>;
				};
				level2 {
					base = <&set4>;
					set = <&set4_2>;
				};
			};
			mode5 {
				desc = "camera";

				level0 {
					base = <&set5>;
					set = <&set5>;
				};
				level1 {
					base = <&set5>;
					set = <&set5_1>;
				};
				level2 {
					base = <&set5>;
					set = <&set5_2>;
				};
			};
		};

		ego {
			thread-run-on = "0-8";

			domain@0 {
				cpus = CPU_CL0;
				ratio = < 1000 >;
			};
			domain@1 {
				cpus = CPU_CL1L;
				ratio = < 1000 >;
			};
			domain@2 {
				cpus = CPU_CL1H;
				ratio = < 1000 >;
			};
			domain@3 {
				cpus = CPU_CL2;
				ratio = < 1000 >;
			};
		};

		pago {
			thread-run-on = "0-3";

			dsu {
				desc = "group_dsu";

				boost-min = < 1056000 >;
				force-boost-ms = < 500 >;

				domain@0 {
					cpus = CPU_CL0;
					cpu-mem-table =
